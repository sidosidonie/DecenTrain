{
    "train_batch_size": 1,
    "fp16": {
        "enabled": "true"
    },
    "zero_optimization": {
      "stage": 3,
      "offload_optimizer": {
        "device": "cpu",
        "pin_memory": true
      },
      "offload_param": {
        "device": "cpu",
        "pin_memory": true
      },
      "contiguous_gradients": true,
      "overlap_comm": false
    },
    "optimizer": {
        "type": "Adam",
        "params": {
          "lr": 0.001,
          "betas": [
            0.8,
            0.999
          ],
          "eps": 1e-8,
          "weight_decay": 3e-7
        }
  },
  "logging": {
    "steps_per_print": 1,
    "wall_clock_breakdown": true
  }

}
  